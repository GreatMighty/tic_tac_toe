<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1C7C2"
    android:orientation="vertical"
    tools:context=".GameDisplay">

    <TextView
        android:id="@+id/player_Turn"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30sp" />
    <com.example.tic_tac_toe.TicTacToeBoard
        android:id="@+id/ticTacToeBoard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        custom:boardColor="#000000"
        custom:XColor="#FF0000"
        custom:OColor="#0000FF"
        custom:winningLineColor="#29BC71"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playAgain"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:onClick="playAnainButtonClick"
            android:text="@string/play_again" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/blue_button"
            android:gravity="center"
            android:onClick="homeButtonClick"
            android:text="@string/home" />
    </LinearLayout>



</LinearLayout>